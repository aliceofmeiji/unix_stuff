#!/bin/sh
repeat=$(cat $HOME/mus/status)
playpause="$(cat $HOME/mus/playpause)"

if [ "$1" = "ascii" ]; then
	if [ "$repeat" = "repeat" ]; then
		if [ "$playpause" = "play" ]; then
			echo 'r u'
		fi
		if [ "$playpause" = "pause" ]; then
			echo 'r >' 
		fi
		if [ "$playpause" = "stop" ]; then
			echo 'r o'
		fi
	else
		if [ "$playpause" = "play" ]; then
			echo 's u'
		fi
		if [ "$playpause" = "pause" ]; then
			echo 's >'
		fi
		if [ "$playpause" = "stop" ]; then
			echo 's o'
		fi
	fi
else
